<Window x:Class="AstroImageAnalyzer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AstroImageAnalyzer.UI"
        xmlns:converters="clr-namespace:AstroImageAnalyzer.UI.Converters"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="Astro Image Analyzer" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="False">
    <Window.InputBindings>
        <KeyBinding Key="O"
                    Modifiers="Control"
                    Command="{Binding LoadFilesCommand}" />
        <KeyBinding Key="F"
                    Modifiers="Control"
                    Command="{x:Static local:MainWindow.ToggleFullScreenCommand}" />
        <KeyBinding Key="L"
                    Modifiers="Control"
                    Command="{Binding LoadLastFileCommand}" />
    </Window.InputBindings>
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            ResizeBorderThickness="6"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>
    <Window.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Style for the icon-like menu item so it doesn't look like a normal menu entry -->
        <Style x:Key="IconMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="4,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact template for top-level menu items (File, View) so they don't stretch -->
        <Style x:Key="TopLevelMenuHeaderStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter ContentSource="Header"
                                                  RecognizesAccessKey="True"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsSubmenuOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">
                                <Border Background="{StaticResource SurfaceBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        Padding="4,2"
                                        SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True"
                                                KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for checkable submenu items (e.g. Debayer) so the check mark is visible -->
        <Style x:Key="CheckableMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="24,6,12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="CheckMark" Grid.Column="0" Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                           Foreground="{StaticResource TextBrush}" VerticalAlignment="Center" Visibility="Collapsed"/>
                                <ContentPresenter Grid.Column="1" ContentSource="Header" RecognizesAccessKey="True" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource Self}}" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource Self}}" Value="False">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border x:Name="RootBorder"
            Background="{StaticResource BackgroundBrush}"
            BorderBrush="{StaticResource WindowBorderBrush}"
            BorderThickness="1">
        <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar with Menu (hidden in full screen) -->
        <Border x:Name="TitleBarBorder"
                Grid.Row="0"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App icon on the far left, used as draggable area -->
                <Border Grid.Column="0"
                        Width="20"
                        Height="20"
                        Margin="4,0,8,0"
                        Background="Transparent">
                    <Ellipse Stroke="#FF7F1F1F"
                             StrokeThickness="3"
                             Fill="Transparent"/>
                </Border>
                
                <!-- Menu bar next to the icon -->
                <Menu Grid.Column="1"
                      Background="Transparent"
                      Foreground="{StaticResource TextBrush}"
                      VerticalAlignment="Center"
                      Height="30"
                      Padding="0">
                    <MenuItem Header="_File"
                              Style="{StaticResource TopLevelMenuHeaderStyle}">
                        <MenuItem Header="_Open..."
                                  Command="{Binding LoadFilesCommand}"
                                  InputGestureText="Ctrl+O"/>
                        <MenuItem Header="Open _Last"
                                  Command="{Binding LoadLastFileCommand}"
                                  InputGestureText="Ctrl+L"/>
                    </MenuItem>
                    <MenuItem Header="_View"
                              Style="{StaticResource TopLevelMenuHeaderStyle}">
                        <MenuItem Header="_Debayer"
                                  Style="{StaticResource CheckableMenuItemStyle}"
                                  Command="{Binding ToggleDebayerCommand}"
                                  IsCheckable="True"
                                  IsChecked="{Binding IsDebayerEnabled, Mode=OneWay}"
                                  ToolTip="Show CFA (Bayer) images in color when enabled"/>
                        <MenuItem Header="_Toggle Full Screen"
                                  Command="{x:Static local:MainWindow.ToggleFullScreenCommand}"
                                  InputGestureText="Ctrl+F"/>
                    </MenuItem>
                </Menu>
                
                <!-- Window controls on the right -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="MinimizeButton"
                            Content="&#xE921;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="10"
                            Width="46"
                            Height="30"
                            Background="Transparent"
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            Click="MinimizeButton_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="MaximizeButton"
                            Content="&#xE922;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="10"
                            Width="46"
                            Height="30"
                            Background="Transparent"
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            Click="MaximizeButton_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="FullScreenButton"
                            Content="&#xE740;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="10"
                            Width="46"
                            Height="30"
                            Background="Transparent"
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            Click="FullScreenButton_Click"
                            Cursor="Hand"
                            ToolTip="Toggle full screen">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button x:Name="CloseButton"
                            Content="&#xE8BB;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="10"
                            Width="46"
                            Height="30"
                            Background="Transparent"
                            Foreground="{StaticResource TextBrush}"
                            BorderThickness="0"
                            Click="CloseButton_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Background="{StaticResource BackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>
            
            <!-- File List Panel (same border as image/chart/statistics panels) -->
            <Border Grid.Column="0"
                    Margin="1,0,1,0"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding LoadedFolderName}"
                               FontWeight="Bold"
                               Margin="1,2,1,0"
                               Visibility="{Binding HasLoadedFolder, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <ListBox Grid.Row="1"
                             Margin="0"
                             BorderThickness="0"
                             ItemsSource="{Binding LoadedImages}" 
                             SelectedItem="{Binding SelectedImage}"
                             DisplayMemberPath="FileName"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                </Grid>
            </Border>
            
            <!-- Image Display and Charts -->
            <Grid Grid.Column="1" Background="{StaticResource BackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
                <!-- Image Display Area (supports drag-and-drop of a file to load folder) -->
                <Border Grid.Row="0"
                        Margin="1,0,1,1"
                        Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        AllowDrop="True"
                        Drop="ImagePanel_Drop"
                        DragOver="ImagePanel_DragOver">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                            <Border Background="{StaticResource SurfaceBrush}" Padding="2">
                                <Grid>
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding PreviewImage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                                        <TextBlock Text="Drop an image file here or click Open below"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,12"/>
                                        <Button Content="Open"
                                                Command="{Binding LoadFilesCommand}"
                                                HorizontalAlignment="Center"
                                                Padding="16,8"
                                                MinWidth="80"/>
                                    </StackPanel>

                                    <Image Source="{Binding PreviewImage}"
                                           Stretch="Uniform"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Visibility="{Binding PreviewImage, Converter={StaticResource NullToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                    </ScrollViewer>
                </Border>
                
                <!-- Statistics Chart: click to set STF max, Ctrl+click to set STF min -->
                <Border Grid.Row="1"
                        Margin="1,1,1,0"
                        Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1">
                    <oxy:PlotView x:Name="HistogramPlotView" Model="{Binding HistogramModel}" 
                                  Background="{StaticResource SurfaceBrush}"
                                  PreviewMouseDown="HistogramPlotView_PreviewMouseDown"
                                  ToolTip="Click to set STF max; Ctrl+Click to set STF min"/>
                </Border>
            </Grid>
            
            <!-- Statistics Panel -->
            <Border Grid.Column="2"
                    Margin="1,0,0,0"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Image Statistics"
                               FontWeight="Bold"
                               Margin="6,4,6,4"/>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="8">
                            <TextBlock Text="No image selected" 
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     Visibility="{Binding SelectedStatistics, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                            
                            <StackPanel Visibility="{Binding SelectedStatistics, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="File:" FontWeight="Bold" Margin="0,4"/>
                                <TextBlock Text="{Binding SelectedImage.FileName}" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Dimensions:" FontWeight="Bold" Margin="0,4"/>
                                <TextBlock Text="{Binding SelectedImage.Width, StringFormat='Width: {0} px'}" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedImage.Height, StringFormat='Height: {0} px'}" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Statistics:" FontWeight="Bold" Margin="0,4"/>
                                <TextBlock Text="{Binding SelectedStatistics.Minimum, StringFormat='Min: {0:F2}'}" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedStatistics.Maximum, StringFormat='Max: {0:F2}'}" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedStatistics.Mean, StringFormat='Mean: {0:F2}'}" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedStatistics.Median, StringFormat='Median: {0:F2}'}" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedStatistics.StandardDeviation, StringFormat='Std Dev: {0:F2}'}" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedStatistics.Variance, StringFormat='Variance: {0:F2}'}" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedStatistics.Sum, StringFormat='Sum: {0:F2}'}" Margin="0,2"/>
                                <TextBlock Text="{Binding SelectedStatistics.PixelCount, StringFormat='Pixels: {0:N0}'}" Margin="0,2"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="8,4">
            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondaryBrush}"/>
        </Border>
        </Grid>
    </Border>
</Window>
